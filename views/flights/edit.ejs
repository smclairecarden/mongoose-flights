<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" /> 
<%- include('../partials/nav') %> 

<main>
  <h1><%= title %></h1>
  <form action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label>Airline:
      <select name="airline">
        <option value="<%= flight.airline %>"><%= flight.airline %></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label>Airport:
      <select name="airport" default="DEN">
        <option value="<%= flight.airport %>"><%= flight.airport %> </option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label>FlightNo:
      <input type="text" name="flightNo" value="<%= flight.flightNo %> ">
      </select>
    </label><br>
    <label>Departs:
      <input type="datetime-local" name="departs" value="<%= flight.departs %>">
    </label><br>
    <button type="submit">Update Flight</button>
  </form>
</main>

<%- include('../partials/footer') %> 